<%= turbo_frame_tag "meetingmodal#{meeting.id}" do %>
  <div class="modal fade" id="modalmeeting<%= meeting.id %>" tabindex="-1" aria-labelledby="meetingModalLabel" aria-hidden="true" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="meetingModalLabel"><%= meeting.name %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p><strong>Notes:</strong> <%= meeting.notes %></p>
          <p><strong>Duration:</strong> <%= meeting.duration %></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
