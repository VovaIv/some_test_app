<p style="color: green"><%= notice %></p>

<%= render @meeting %>

<% content_for :sidebar do %>
  <div class="card">
    <div class="card-header">
      Actions
    </div>
    
    <div class="card-body">
      <div class="btn-group-vertical gap-2" role="group" aria-label="Vertical button group">
        <%= link_to "Edit this meeting", edit_admin_meeting_path(@meeting), class: "btn btn-primary" %>
        <%= link_to "Back to meetings", admin_meetings_path, class: "btn btn-secondary" %>
        <%=  button_to "Destroy this meeting", [:admin, @meeting], method: :delete, class: "btn btn-success" %>
    </div>
  </div>
<% end %>